// Custom styles.
code {
    color: #ff7600;
    background: #fbf7f8;
    margin: 2px;
}
// 大代码块的自定义样式
.highlight, pre {
    margin: 5px 0;
    border-radius: 3px;
}
.highlight, code, pre {
    border: 1px solid #d6d6d6
}
.headband {
    height: 0;
}
// 文章内链接文本样式
.post-body p a{
  color: #0593d3;
  border-bottom: none;
  border-bottom: 1px solid #0593d3;
  &:hover {
    color: #fc6423;
    border-bottom: none;
    border-bottom: 1px solid #fc6423;
  }
}
//取消图片的边框
.posts-expand .post-body img {
    border: none;
}